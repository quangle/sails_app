<div ng-app="socketApp" ng-controller="ChatController">
  <div class="col-md-12">
    <table class="table">
      <tr class="chat_message" ng-repeat="chat in chatList">
        <td class="col-md-12 td_class">
          <strong>{{chat.user}} : {{chat.message}}</strong>
        </td>
      </tr>
    </table>
  </div>
  <div class="navbar navbar-inverse navbar-fixed-bottom" >
    <div class="col-lg-12">
      <form class="form_chat">
        <div class="col-lg-4 col-md-3">
          <input type="text" ng-model = "chatUser" class="form-control" placeholder="Type YourName Here"></div>
        <div class="col-lg-6 col-md-5">
          <input type="text" ng-model = "chatMessage" class="form-control" placeholder="Type Your Message Here"></div>
          <button class="btn btn-default col-lg-2 col-md-2" ng-click="sendMsg()">Send</button>
      </form>
    </div>
  </div>
</div>
